# Ultimate Japanese Quiz Solver - Environment Configuration

# ====================
# AI Provider Settings
# ====================

# Google Gemini API key (recommended for Japanese text)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API key (strong reasoning capabilities)  
OPENAI_API_KEY=sk-qrst5678qrst5678qrst5678qrst5678qrst5678

# Anthropic Claude API key (excellent context understanding)
CLAUDE_API_KEY=your_claude_api_key_here

# Default AI provider to use ("gemini", "openai", or "claude")
AI_PROVIDER=gemini

# ====================
# OCR Settings
# ====================

# Path to Tesseract executable (Windows)
TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe

# OCR language packs to use
OCR_LANGUAGE=jpn+eng

# OCR page segmentation mode
OCR_PSM_MODE=6

# Image enhancement scale factor (1.0-5.0)
IMAGE_SCALE_FACTOR=3.0

# ====================
# System Settings
# ====================

# Application logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# SQLite database path
DATABASE_PATH=quiz_database.db

# Result cache size (number of entries)
CACHE_SIZE=1000

# Screen scanning polling interval in seconds
POLLING_INTERVAL=0.5

# ====================
# ML Model Settings
# ====================

# Use local models instead of API calls (true/false)
USE_LOCAL_MODELS=false

# Directory for caching downloaded models
MODEL_CACHE_DIR=./models/cache

# Maximum GPU memory allocation (MB, 0 for auto)
MAX_GPU_MEMORY=0

# Enable model quantization for memory efficiency (true/false)
USE_QUANTIZATION=true

# ====================
# RAG (Retrieval) Settings
# ====================

# Sentence transformer model for embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Vector database path
VECTOR_DB_PATH=./data/vector_db

# Number of context passages to retrieve
RAG_TOP_K=5

# Minimum similarity threshold for retrieval
RAG_SIMILARITY_THRESHOLD=0.7

# ====================
# Rule Engine Settings
# ====================

# Minimum confidence for rule engine decisions (0.0-1.0)
RULE_CONFIDENCE_THRESHOLD=0.8

# Enable date/reading rule mappings (true/false)
ENABLE_DATE_RULES=true

# Enable katakana fuzzy matching (true/false)
ENABLE_KATAKANA_FUZZY=true

# Fuzzy matching similarity threshold (0.0-1.0)
FUZZY_SIMILARITY_THRESHOLD=0.75

# ====================
# Morphological Analysis
# ====================

# MeCab/Fugashi dictionary to use
MORPHOLOGY_DICT=unidic-lite

# Enable POS tagging (true/false)
ENABLE_POS_TAGGING=true

# Enable reading extraction (true/false)
ENABLE_READING_EXTRACTION=true

# ====================
# GUI Settings
# ====================

# UI theme ("dark" or "light")
UI_THEME=dark

# Window always on top (true/false)
ALWAYS_ON_TOP=true

# Auto-save screenshots for debugging (true/false)
AUTO_SAVE_SCREENSHOTS=false

# Screenshot save directory
SCREENSHOT_DIR=./screenshots

# ====================
# Performance Settings
# ====================

# Number of worker threads for parallel processing
WORKER_THREADS=4

# Enable GPU acceleration if available (true/false)
USE_GPU_ACCELERATION=true

# Batch size for ML model inference
INFERENCE_BATCH_SIZE=1

# Maximum processing timeout in seconds
PROCESSING_TIMEOUT=30

# ====================
# Development Settings
# ====================

# Enable debug mode (true/false)
DEBUG_MODE=false

# Enable performance profiling (true/false)
ENABLE_PROFILING=false

# Save intermediate processing results (true/false)
SAVE_INTERMEDIATE_RESULTS=false

# Export detailed logs (true/false)
EXPORT_DETAILED_LOGS=false

# ====================
# Privacy Settings
# ====================

# Only process text locally without API calls (true/false)
LOCAL_ONLY_MODE=false

# Anonymize saved data (true/false)
ANONYMIZE_DATA=true

# Auto-delete old logs after days (0 to disable)
AUTO_DELETE_LOGS_DAYS=30

# ====================
# Export Settings
# ====================

# Default export format (csv, json, xlsx, anki)
DEFAULT_EXPORT_FORMAT=csv

# Include screenshots in exports (true/false)
INCLUDE_SCREENSHOTS_IN_EXPORT=false

# Anki deck name for exports
ANKI_DECK_NAME=Japanese Quiz Practice

# ====================
# Notification Settings
# ====================

# Enable system notifications (true/false)
ENABLE_NOTIFICATIONS=true

# Play sound on quiz detection (true/false)
PLAY_DETECTION_SOUND=false

# Sound file for notifications
NOTIFICATION_SOUND=./sounds/notification.wav
